[merge]
	tool = vimdiff
[core]
	editor = vim
[alias]
	last = log -1 HEAD
	co = checkout
	st = status
	br = branch
	ci = commit
	unstage = reset HEAD --
	ls = ls-files -v --stage --abbrev=8
	log-graph = log --pretty=oneline --graph --all
	log-grep = !git log -p -m -S "$1"

[color]
	ui = auto
